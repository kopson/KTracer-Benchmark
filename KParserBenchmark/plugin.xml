<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/splash_icon_32.png">
         <run
               class="kparserbenchmark.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="KParserBenchmark.application"
            description="KTracer Benchmark Tool"
            name="KTracer">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="kparserbenchmark.projectexplorer.ProjectExplorer"
            icon="icons/box_16.png"
            id="KParserBenchmark.projectExplorer"
            name="Project"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="kparserbenchmark.editor.ScriptEditor"
            default="false"
            icon="icons/document_pencil_16.png"
            id="KParserBenchmark.editor.mainEditor"
            name="Script Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="kparserbenchmark.intro.Perspective"
            icon="icons/alt_window_16.gif"
            id="KParserBenchmark.perspective"
            name="RCP Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="KParserBenchmark.projectExplorer"
               minimized="false"
               moveable="true"
               ratio="0.2f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="kparserbenchmark.intro"
            content="introContent.xml"
            id="KParserBenchmark.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="kparserbenchmark.intro">
      </intro>
      <introProductBinding
            introId="kparserbenchmark.intro"
            productId="KParserBenchmark.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="kparserbenchmark.commands.ProjectWizardHandler"
            id="KParserBenchmark.newProjectCommand"
            name="New Project">
      </command>
      <command
            defaultHandler="org.eclipse.ui.internal.handlers.IntroHandler"
            id="KParserBenchmark.welcomeCommand"
            name="Welcome">
      </command>
      <command
            defaultHandler="org.eclipse.ui.internal.handlers.QuitHandler"
            id="KParserBenchmark.exitCommand"
            name="Exit">
      </command>
      <command
            defaultHandler="kparserbenchmark.commands.SetWorkspaceHandler"
            id="KParserBenchmark.SetWorkspaceCommand"
            name="SetWorkspace">
      </command>
      <command
            defaultHandler="org.eclipse.ui.internal.about.AboutHandler"
            id="KParserBenchmark.aboutCommand"
            name="About">
      </command>
      <command
            defaultHandler="org.eclipse.ui.internal.handlers.SaveHandler"
            id="KParserBenchmark.saveCommand"
            name="Save">
      </command>
      <command
            defaultHandler="org.eclipse.ui.internal.handlers.SaveAsHandler"
            id="KParserBenchmark.saveAsCommand"
            name="Save As">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="KParserBenchmark.fileMenu"
               label="File">
            <command
                  commandId="KParserBenchmark.saveCommand"
                  label="Save"
                  style="push"
                  tooltip="Save file">
            </command>
            <command
                  commandId="KParserBenchmark.saveAsCommand"
                  label="Save As"
                  style="push">
            </command>
            <separator
                  name="KParserBenchmark.separator"
                  visible="true">
            </separator>
            <command
                  commandId="KParserBenchmark.exitCommand"
                  label="Exit"
                  style="push"
                  tooltip="Exit application">
            </command>
         </menu>
         <menu
               id="KParserBenchmark.projectMenu"
               label="Project">
            <command
                  commandId="KParserBenchmark.SetWorkspaceCommand"
                  label="Set workspace"
                  style="push">
            </command>
            <command
                  commandId="KParserBenchmark.newProjectCommand"
                  label="New Project"
                  style="push">
            </command>
         </menu>
         <menu
               id="KParserBenchmark.helpMenu"
               label="Help">
            <command
                  commandId="KParserBenchmark.welcomeCommand"
                  label="Welcome"
                  style="push">
            </command>
            <command
                  commandId="KParserBenchmark.aboutCommand"
                  label="About"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
